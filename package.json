{
	"name": "aws-node-serverless-project",
	"version": "1.0.0",
	"description": "serverless FW learning project",
	"main": "index.js",
	"author": "yuta-katayama-23",
	"license": "MIT",
	"scripts": {
		"dev": "sls offline start",
		"debug": "SLS_DEBUG=* && node --inspect node_modules/serverless/bin/serverless offline start",
		"package": "sls package --stage production",
		"deploy": "sls deploy --stage production",
		"invoke:local": "sls invoke local --function hello",
		"aws.lambda.invoke": "aws lambda invoke --payload '{ \"name\": \"Bob\" }' --endpoint-url http://localhost:3002 --function-name hello-lambda --cli-binary-format raw-in-base64-out response.json",
		"eslint:check": "eslint .",
		"eslint:fix": "eslint --fix .",
		"style:fix": "prettier --write .",
		"ncu": "ncu",
		"prepare": "npx simple-git-hooks"
	},
	"dependencies": {
		"nanoid": "^3.3.4"
	},
	"devDependencies": {
		"@babel/core": "^7.19.6",
		"@babel/preset-env": "^7.19.4",
		"babel-loader": "^9.0.1",
		"eslint": "^8.26.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-webpack": "^0.13.2",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jest": "^27.1.3",
		"eslint-webpack-plugin": "^3.2.0",
		"jest": "^29.2.2",
		"lint-staged": "^13.0.3",
		"npm-check-updates": "^16.3.16",
		"prettier": "^2.7.1",
		"serverless": "^3.23.0",
		"serverless-offline": "^11.2.3",
		"serverless-webpack": "^5.10.0",
		"simple-git-hooks": "^2.8.1",
		"webpack": "^5.74.0",
		"webpack-node-externals": "^3.0.0"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"lint-staged": {
		"*": "npx prettier --ignore-unknown --write"
	}
}
