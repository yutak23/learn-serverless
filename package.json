{
	"name": "aws-node-serverless-project",
	"version": "1.0.0",
	"description": "serverless FW learning project",
	"main": "index.js",
	"author": "yuta-katayama-23",
	"license": "MIT",
	"scripts": {
		"dev": "sls offline start",
		"debug": "SLS_DEBUG=* && node --inspect node_modules/serverless/bin/serverless offline start",
		"package": "sls package --stage production",
		"deploy": "sls deploy --stage production",
		"setup": "run-s aws.ssm.put-parameters aws.kinesis.create-stream",
		"aws.ssm.put-parameters": "run-s aws.ssm.put-parameter.*",
		"aws.ssm.put-parameter.stripSecretKey": "aws ssm put-parameter --name /stripe_webhook_local/stripe_secret_key --value **** --type SecureString --overwrite --endpoint=http://localhost:4566",
		"aws.kinesis.create-stream": "aws kinesis create-stream --stream-name kinesis-internal-events-local --stream-mode-details StreamMode=PROVISIONED --shard-count 1 --endpoint=http://localhost:4566",
		"aws.kinesis.put-record": "aws kinesis put-record --stream-name kinesis-internal-events-local --partition-key 123 --data '{\"category\":\"stripe\",\"type\":\"payment_method.attached\",\"service\":\"aws-node-serverless-stripe-webhook\",\"payload\":{\"version\":1,\"data\":{\"id\":\"card_1MI5SxKcqKFZLnGn4uAD9hX7\",\"customer\":\"cus_MzVc08uHaCvDqX\"}}}' --cli-binary-format raw-in-base64-out --endpoint=http://localhost:4566",
		"eslint:check": "eslint .",
		"eslint:fix": "eslint --fix .",
		"style:fix": "prettier --write .",
		"ncu": "ncu",
		"prepare": "npx simple-git-hooks"
	},
	"dependencies": {
		"@aws-sdk/client-kinesis": "^3.232.0",
		"@aws-sdk/client-ssm": "^3.231.0",
		"stripe": "^11.4.0",
		"winston": "^3.8.2"
	},
	"devDependencies": {
		"@babel/core": "^7.20.5",
		"@babel/preset-env": "^7.20.2",
		"babel-loader": "^9.1.0",
		"eslint": "^8.29.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-webpack": "^0.13.2",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jest": "^27.1.6",
		"eslint-webpack-plugin": "^3.2.0",
		"jest": "^29.3.1",
		"lint-staged": "^13.1.0",
		"npm-check-updates": "^16.5.6",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.1",
		"serverless": "^3.25.1",
		"serverless-offline": "^12.0.2",
		"serverless-offline-kinesis": "^6.2.3",
		"serverless-plugin-ifelse": "^1.0.7",
		"serverless-webpack": "^5.11.0",
		"simple-git-hooks": "^2.8.1",
		"webpack": "^5.75.0",
		"webpack-node-externals": "^3.0.0"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"lint-staged": {
		"*": "npx prettier --ignore-unknown --write"
	}
}
